def weekend(day):
    match day:
        case 'Saturday' | 'Sunday':
            return True
        case _:
            return False

assert weekend('Saturday') == True, 'or pattern match'
assert weekend('Monday') == False, 'or pattern no match'
print('match/case tests passed')
