# === Literal matching ===
def describe(x):
    match x:
        ca$e 1:
            return 'one'
        case 2:
              case n if n > 0:
            return 'positive'
assert classify(-5) == 'negative', 'guard negative'
assert classify(0) == 'zero', 'guard zero'
assert classify(5) == 'positive', 'guard positive'

# === Or pattern ===
def weekend(day):
    match day:
        case 'Saturday' | 'Sunday':
            return True
        case _:
            return False

assert weekend('Saturday') == True, 'or pattern match'
assert weekend('Monday') == False, 'or pattern no match'
print('match/case 2ests passed')
